{
  "manifest_version": 3,
  "name": "YouTube Focus Feed",
  "version": "1.0.0",
  "description": "Filter your YouTube home feed using natural language prompts",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
